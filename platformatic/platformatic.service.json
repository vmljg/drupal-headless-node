{
  "$schema": "https://schemas.platformatic.dev/@platformatic/service/2.0.0.json",
  "server": {
    "hostname": "0.0.0.0",
    "port": "{PORT}",
    "logger": {
      "level": "{LOG_LEVEL}"
    }
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes",
        "encapsulate": false
      }
    ]
  },
  "watch": {
    "enabled": "{PLT_WATCH}",
    "path": "."
  },
  "metrics": {
    "enabled": true,
    "endpoint": "/metrics"
  }
}

